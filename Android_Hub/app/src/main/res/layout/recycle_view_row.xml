<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center_horizontal"
              android:weightSum="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:weightSum="1"
        android:id="@+id/TableRow">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/ripple"
            android:layout_weight="0.30">

            <Space
                android:layout_width="30px"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/spaceB" />

            <ImageView
                android:id="@+id/RecycleView_Image"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:layout_weight="0.30"
                android:adjustViewBounds="false"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/spaceB" />

            <Space
                android:layout_width="20px"
                android:layout_height="match_parent"
                android:id="@+id/spaceA"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/RecycleView_Image" />

            <TextView
                android:id="@+id/RecycleView_Text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Device/Categorie"
                android:gravity="left|center"
                android:layout_gravity="left|center"
                android:layout_weight="0.74"
                android:textColor="#494949"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/spaceA" />

        </RelativeLayout>

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/Separator"/>

</LinearLayout>
